{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "./esm",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, // Generate .d.ts files
    "declarationDir": "./esm/types" 
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "types/**/*.d.ts", "src/bin/**/*.ts"]
}